# Include all necessary files in source distribution

# Swift source files
include foundationmodels/swift/*.swift
include foundationmodels/swift/*.h

# Dynamic library
include lib/*.dylib
include lib/*.swiftmodule

# Cython source files
include foundationmodels/*.pyx
include foundationmodels/*.pxd

# Type stub marker
include foundationmodels/py.typed

# Documentation
include README.md
include LICENSE

# Exclude unnecessary files
global-exclude *.pyc
global-exclude __pycache__
global-exclude *.so
global-exclude .DS_Store
global-exclude *.a
